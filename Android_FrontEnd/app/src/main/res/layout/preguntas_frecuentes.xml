<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    tools:context=".Activities.Activity_Preguntas_Frecuentes">


    <TextView
        android:id="@+id/preguntas_frecuentes"
        android:layout_width="97dp"
        android:layout_height="51dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="FAQS"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pregunta"
        android:layout_width="276dp"
        android:layout_height="149dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="pregunta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/respuesta"
        android:layout_width="276dp"
        android:layout_height="149dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="respuesta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/respuesta_titulo" />

    <TextView
        android:id="@+id/pregunta_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="Pregunta ..."
        android:textColor="@color/color7"
        app:layout_constraintStart_toStartOf="@id/pregunta"
        app:layout_constraintBottom_toTopOf="@id/pregunta"/>

    <TextView
        android:id="@+id/respuesta_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="Respuesta ..."
        android:textColor="@color/color7"
        app:layout_constraintStart_toStartOf="@id/pregunta"
        app:layout_constraintTop_toBottomOf="@id/pregunta"/>

    <Button
        android:id="@+id/siguiente_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="Siguiente pregunta"
        android:onClick="siguiente_pregunta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/respuesta" />
    />

</androidx.constraintlayout.widget.ConstraintLayout>